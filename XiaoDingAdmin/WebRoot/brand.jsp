			$('#addBrand').on('click', function(){
                //iframeå±-ç¶å­æä½
				layer.open({
				  type: 2,
				  title: '添加品牌',
				  area: ['700px', '530px'],
				  fix: false, //ä¸åºå®
				  content: 'addBrand.jsp'
				});
			});
			
			var updateBrand = function(id, name, picPath){
				//iframe 修改品牌
				//var url = "updateBrand.jsp?id=" + id;
				layer.open({
				  type: 2,
				  title: '修改品牌',
				  area: ['700px', '530px'],
				  fix: false, //
				  content: "updateBrand.jsp?id=" + id + "&name=" + name + "&picPath=" + picPath
				});
			};
			
			//删除品牌
			var deleteBrand = function(brandId, brandName, brandPicPath){
				
				
				 layer.confirm("确定是否删除?", {
			    	 btn:["确定", "取消"]},
			    	 function(index){
			    		 $.post("delBrand.action",{id:brandId, name:brandName, picPath: brandPicPath},
								  function(data){
							            if(data.msg == "1")
							        	{
							        	   $('#'+brandId).remove();
							        	}
							            else{
							            	layer.msg("删除[" + brandName + "]失败!!!");
							            }
							          
							
								  },
								  "json");//这里返回的类型有：json,html,xml,text
			    		layer.close(index);
			    	 
			     });
	
			};
			
			var getBrand = function(pageNo){
				 $('#dataDiv').html("");
				$.ajax({
				      url: "listBrands.action",
				      datatype: 'json',
				      type: "GET",
				      data: { "pageNo": pageNo, "pageSize":12 },
				      dataType: "json",
				      success: function (data) {
				    	 
				          if (data != null) 
				          {
				        	   tPages =  data.totalPages;
				        	   curPage = data.currentPage;
				        	   pgSize = data.sizeOfPage;
				               var tableShow = "";
					           $.each(data.brandLists, function(i, item){
					        	 // alert(item.name + " ," + item.picPath);
					        	 tableShow += "<div class='col-lg-3 col-md-4 col-sm-6 col-xs-12' id=\"" + item.id + "\">";
					        	 tableShow += " <div class='thumbnail'>";
					        	 tableShow += "<img src= \"" + item.picPath + "\" alt=\"" + item.name + "\" />";
					             tableShow += "<div class='caption'>";
					             tableShow += "<p align='center' >" + item.name + "</p>";
					             tableShow += "</div>";
					             tableShow += "<div style='text-align: center;'>";
					             tableShow += "<button class='btn btn-default' onclick='updateBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-pencil'></i></button>";
					             tableShow += "<button class='btn btn-default' onclick='deleteBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-trash'></i></button>";
					             tableShow +="</div></div></div>";
					           });//end each
					           $('#dataDiv').append(tableShow); 
				          }
				     }
				    
				});//end $.ajax
			};//end getBrand
			
		   $('#searchBtn').on('click', function(){
			    searchBrand();
		   });
		   $('#searchText').keyup(function(){
		        if(event.keyCode == 13){
		            //这里写你要执行的事件;
		        	 searchBrand();
		        }
		    });
			
			var searchBrand = function(){
			   var brandName = $('#searchText').val();
			   if(brandName.length > 0)
			   {
				   $('#dataDiv').html("");
				   $('#brandPager').hide();
				   $.ajax({
					      url: "searchBrand.action",
					      datatype: 'json',
					      type: "POST",
					      data: { "brandName": brandName},
					      dataType: "json",
					      success: function (data) {
					    	 
					          if (data != null) 
					          {
					               var tableShow = "";
						           $.each(data.brandLists, function(i, item){
						        	 // alert(item.name + " ," + item.picPath);
						        	 tableShow += "<div class='col-lg-3 col-md-4 col-sm-6 col-xs-12' id=\"" + item.id + "\">";
						        	 tableShow += " <div class='thumbnail'>";
						        	 tableShow += "<img src= \"" + item.picPath + "\" alt=\"" + item.name + "\" />";
						             tableShow += "<div class='caption'>";
						             tableShow += "<p align='center' >" + item.name + "</p>";
						             tableShow += "</div>";
						             tableShow += "<div style='text-align: center;'>";
						             tableShow += "<button class='btn btn-default' onclick='updateBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-pencil'></i></button>";
						             tableShow += "<button class='btn btn-default' onclick='deleteBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-trash'></i></button>";
						             tableShow +="</div></div></div>";
						           });//end each
						           $('#dataDiv').append(tableShow); 
					          }
					     }
					    
					});//end $.ajax
			   }else{
				   $('#dataDiv').html("");
				   getFirstPageOfBrand();
			   }
			};
			
			var getFirstPageOfBrand = function(){
				
				$.ajax({
				      url: "listBrands.action",
				      datatype: 'json',
				      type: "GET",
				      data: { "pageNo": 1, "pageSize":12 },
				      dataType: "json",
				      success: function (data) {
				    	  var curPage = 0;
						  var tPages = 11;
						  var pgSize = 12;
				          if (data != null) 
				          {
				        	   tPages =  data.totalPages;
				        	   curPage = data.currentPage;
				        	   pgSize = data.sizeOfPage;
				               var tableShow = "";
					           $.each(data.brandLists, function(i, item){
					        	 // alert(item.name + " ," + item.picPath);
					        	 tableShow += "<div class='col-lg-3 col-md-4 col-sm-6 col-xs-12' id=\"" + item.id + "\">";
					        	 tableShow += " <div class='thumbnail'>";
					        	 tableShow += "<img src= \"" + item.picPath + "\" alt=\"" + item.name + "\" />";
					             tableShow += "<div class='caption'>";
					             tableShow += "<p align='center' >" + item.name + "</p>";
					             tableShow += "</div>";
					             tableShow += "<div style='text-align: center;'>";
					             tableShow += "<button class='btn btn-default' onclick='updateBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-pencil'></i></button>";
					             tableShow += "<button class='btn btn-default' onclick='deleteBrand(\"" + item.id + "\",\"" + item.name + "\", \"" + item.picPath + "\")'><i class='glyphicon glyphicon-trash'></i></button>";
					             tableShow +="</div></div></div>";
					           });//end each
					           $('#dataDiv').append(tableShow);
					           $('#brandPager').show();
					           
					           var element = $('#brandPager');
					            var options = {
					                bootstrapMajorVersion:3,
					                currentPage: curPage,
					                numberOfPages: pgSize,
					                totalPages: tPages,
					                itemTexts: function (type, page, current) {
					                switch (type) {
						                case "first":
						                  return "首页";
						                case "prev":
						                  return "上一页";
						                case "next":
						                  return "下一页";
						                case "last":
						                  return "末页";
						                case "page":
						                  return page;
					                  }
					              },
					              //点击事件，用于通过Ajax来刷新整个list列表
						            onPageClicked: function (event, originalEvent, type, page) {
						            	
						            	getBrand(page);
						            }//onpageClicked
					            };//end of options

					            element.bootstrapPaginator(options);
					          
				          }//end data != null
				     }//end success
				    
				});//end $.ajax
			};
